<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:orientation="vertical" >
            <!--投保资料  -->
		  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/insurance_information" />
            </LinearLayout>

            <!-- 姓名 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2.0"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/et_user_name"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/insurance_name_hint"
                     android:maxLength="40"
                      android:layout_weight="7.0" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 电话 -->

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_weight="2.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/phone" />

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/edit_no_background2"
                   android:layout_width="0dp"
                   android:layout_weight="7.0"
                   android:inputType="number"
                   android:maxLength="20"
                    android:hint="@string/insurance_phone_hint"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 狗狗昵称 -->

            <LinearLayout
                android:id="@+id/ll_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                     android:layout_width="0dp"
                    android:layout_weight="2.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/edit_name" />

                <EditText
                    android:id="@+id/et_pet_nick_name"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                   android:layout_weight="7.0"
                    android:maxLength="40"
                    android:hint="@string/insurance_nick_name_hint"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 品种 -->

            <LinearLayout
                android:id="@+id/ll_pet_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                  android:layout_width="0dp"
                    android:layout_weight="2.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/edit_pet_type" />

                <EditText
                    android:id="@+id/et_pet_type"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                   android:layout_weight="7.0"
                    android:maxLength="40"
                    android:hint="@string/insurance_pet_varieties_hint"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 颜色 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                     android:layout_width="0dp"
                    android:layout_weight="2.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/insurance_pet_colour"
                   />

                <EditText
                    android:id="@+id/et_colour"
                    style="@style/edit_no_background2"
                   android:layout_width="0dp"
                   android:layout_weight="7.0"
                    android:maxLength="40"
                    android:hint="@string/insurance_pet_colour_hint"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 尾巴形状 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_weight="2.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/tail_shape"
                     />
                
              <LinearLayout
                 android:layout_width="0dp"
                   android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                  <Button 
                      android:id="@+id/btn1"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:text="@string/straight"
                      android:textColor="@color/white"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:layout_marginLeft="15dp"
                      android:background="@drawable/radio_selector1"/>
                  <Button 
                      android:id="@+id/btn2"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:text="@string/volume"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:textColor="@color/white"
                      android:background="@drawable/radio_selector1"/>
                  <Button 
                      android:id="@+id/btn3"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:text="@string/song"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:textColor="@color/white"
                      android:background="@drawable/radio_selector1"/>

            </LinearLayout>

            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 年龄 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_weight="2.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/edit_age" />

                <EditText
                    android:id="@+id/et_age"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                   android:layout_weight="7.0"
                    android:maxLength="21"
                	android:inputType="number"
                    android:hint="@string/insurance_pet_age_hint"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 性别 -->

            <LinearLayout
                android:id="@+id/ll_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/edit_sex" />

                <LinearLayout
                 android:layout_width="0dp"
                   android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                  <Button 
                      android:id="@+id/btn_male"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:text="@string/pet_male"
                      android:textColor="@color/white"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:layout_marginLeft="15dp"
                      android:background="@drawable/radio_selector1"/>
                  <Button 
                      android:id="@+id/btn_female"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:text="@string/pet_female"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:textColor="@color/white"
                      android:background="@drawable/radio_selector1"/>
                 

            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>