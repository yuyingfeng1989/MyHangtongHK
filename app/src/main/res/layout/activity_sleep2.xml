<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@color/bg_theme"
     
        >
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" >

            <LinearLayout
                android:id="@+id/doughnutView"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                
                android:paddingTop="10dp"
             android:layout_centerInParent="true"
                android:orientation="vertical" >
                </LinearLayout>
            <ImageView 
            	    android:layout_width="220dp"
            	    android:layout_height="220dp"
            	    android:background="@drawable/while_wave_oval"
            	    android:layout_marginTop="15dp"
            	    
            	    android:layout_centerHorizontal="true"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:layout_marginTop="65dp"
            	android:layout_centerHorizontal="true">
            	
            	<TextView
                    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
          android:layout_marginBottom="5dp"
            android:text="@string/light_sleep"
            android:textSize="@dimen/text_12"/>
                 <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="--"
            android:textSize="45sp"/>
                 <TextView
            android:id="@+id/tv_target_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
          android:layout_marginTop="11dp"
            android:text="@string/today_step"
            android:visibility="gone"
            android:textSize="@dimen/text_12"/>
            </LinearLayout>
 
        </RelativeLayout>
 
        
        <LinearLayout 
            android:id="@+id/ll_down_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            >
            <TextView 
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:textColor="@color/white"
                android:textSize="@dimen/text_15"/>
             <TextView 
                 android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15"/>
             
             <ImageView
                    android:id="@+id/iv_down_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/arrow_down" />
        </LinearLayout>
    </RelativeLayout>
<!--     <RelativeLayout 
                android:id="@+id/rl_toplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></RelativeLayout> -->
                <include 
                    android:id="@+id/ll_calender"
                    layout="@layout/layout_calender1"
                    android:visibility="gone"/>
                
                
                
                 <!-- 浅睡　　深睡　　　时长 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="55dp" >

                    <!-- 浅睡　 -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_selector"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/icon_shuimian_qianshui" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="@string/light_sleep"
                            android:textColor="@color/text_3"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_light_sleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="7dp"
                           android:text="--"
                            android:textColor="@color/text_9"
                            android:textSize="@dimen/text_12" />
                    </LinearLayout>

                    <!-- 深睡　　 -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_selector"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/icon_shuimian_shichang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="@string/deep_sleep"
                            android:textColor="@color/text_3"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_deep_sleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="7dp"
                            android:text="--H"
                            android:textColor="@color/text_9"
                            android:textSize="@dimen/text_12" />
                    </LinearLayout>
                 
                    
                </LinearLayout>

                <!-- 以上是 浅睡　　深睡　　　时长 -->
                
   
   
</LinearLayout>
