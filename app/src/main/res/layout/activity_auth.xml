<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white">


   <LinearLayout
        android:id="@+id/account_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
       
        android:layout_marginLeft="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_lable_grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/username" />

        <com.bluebud.view.ClearEditText
            android:id="@+id/et_username"
            style="@style/edit_no_background1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
             android:layout_marginRight="10dp"
             android:textColorHint="@color/edit_hint"
            android:hint="@string/input_members" />
    </LinearLayout>

    <View
        android:id="@+id/devide1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/account_layout"
        android:layout_marginLeft="15dp"
        android:background="@color/grey_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/devide1"
        android:layout_marginLeft="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_lable_grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/people_name" />

        <com.bluebud.view.ClearEditText
            android:id="@+id/et_password"
            style="@style/edit_no_background1"
           android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/edit_hint"
            android:hint="@string/input_members_name"
             />
    </LinearLayout>
    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/ll_member_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/members_permissions"
            android:textColor="@color/bg_white_bg_pressed"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/text_base_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
           android:text="@string/location"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
             />

        <CheckBox
            android:id="@+id/shake_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/cb_switch_bg"
            android:button="@null" />
        
    </RelativeLayout>
    
    
    </LinearLayout>
    
    
    
    
    
    
    
    
    
    
    
    

    <Button
        android:id="@+id/btn_commit"
        style="@style/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_theme_selector"
        android:padding="10dp"
        android:text="@string/determine_auth"
        android:textColor="@color/btn_text_selected"
        android:textSize="@dimen/text_16" />

    

</LinearLayout>