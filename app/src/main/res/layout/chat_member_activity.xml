<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_normal_bg" >

    <include
        android:id="@+id/include_title"
        layout="@layout/chat_title_base" />

    <com.bluebud.chat.utils.HorizontalGridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/exit_chat"
        android:layout_below="@id/include_title"
        android:verticalSpacing="50dp"
        android:listSelector="#00000000"
        android:numColumns="4" />

    <Button
        android:id="@+id/exit_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/chat_loginout"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="15dp"
        android:textSize="18sp"
        android:text="@string/chat_back_text"
        android:textColor="@color/white" />

</RelativeLayout>