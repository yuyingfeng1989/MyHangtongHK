<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <ImageView
        android:id="@+id/regist_backImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:src="@drawable/backimage_login" />

    <TextView
        android:id="@+id/text_title_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:text="@string/regist_count"
        android:textColor="@color/color_050505"
        android:textSize="25dp" />

    <!--facebook与用户账号绑定提示-->
    <LinearLayout
        android:id="@+id/ll_fb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/bindle_regist_count"
            android:textColor="@color/color_050505"
            android:textSize="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/syschronous_count_data"
            android:textColor="@color/color_adadad"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/email_ico" />
        <EditText
            android:id="@+id/et_user_name"
            style="@style/edit_no_background1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="@string/count_data"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_e8e8e8" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textView"
            style="@style/text_lable_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/password_ico" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/edit_no_background1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/password_select"
            android:layout_toRightOf="@id/textView"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor" />

        <CheckBox
            android:id="@+id/password_select"
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_password"
            android:button="@null" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_e8e8e8" />


    <Button
        android:id="@+id/btn_register"
        style="@style/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="@string/regist_login" />

    <!--服务条款-->
    <LinearLayout
        android:id="@+id/ll_user_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/text_regist_pro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/use_agree"
            android:textColor="@color/color_b7b7b7"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/agreement_text"
            android:clickable="false"
            android:textColor="@color/color_52bbd3"
            android:textSize="12sp" />

    </LinearLayout>

    <!--英文隐私协议-->
    <TextView
        android:id="@+id/tv_en_declare"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/use_agree"
        android:textColor="@color/color_b7b7b7"
        android:textSize="12sp"
        android:visibility="gone"/>
    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/ll_user_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_terms_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/terms_service"
            android:textColor="@color/color_52bbd3"
            android:textSize="12sp"
            android:paddingBottom="10dp"
            android:gravity="center" />
        <TextView
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" and "
            android:paddingBottom="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/privacy_policy"
            android:textColor="@color/color_52bbd3"
            android:textSize="12sp"
            android:paddingBottom="10dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>