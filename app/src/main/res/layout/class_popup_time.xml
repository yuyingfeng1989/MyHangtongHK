<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#a0000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_gray" >

            <Button
                android:id="@+id/btn_item1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="@color/bg_theme"
                android:textSize="@dimen/text_15" />
            <TextView
                android:id="@+id/tv_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:text="@string/please_select" />

            <Button
                android:id="@+id/btn_item2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:background="@null"
                android:text="@string/confirm"
                android:textColor="@color/bg_theme"
                android:textSize="@dimen/text_15" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:visibility="visible"
            android:gravity="center">

            <com.liteguardian.wheelview.WheelView
                android:id="@+id/hour_left_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.liteguardian.wheelview.WheelView
                android:id="@+id/mins_left_start"
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:background="@color/line_gray"/>
            <com.liteguardian.wheelview.WheelView
                android:id="@+id/hour_right_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.liteguardian.wheelview.WheelView
                android:id="@+id/mins_right_end"
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>