<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/text_mid_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/prompt" />

        <include

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_line_landscape1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_content_center"
        android:layout_width="match_parent"
        style="@style/text_base_black"
        android:layout_height="0dp"
        android:padding="25dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_dialog_content"
        style="@style/text_base_black"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:scrollbars="vertical"
        android:text="@string/content"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_line_landscape1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:singleLine="true"
                android:id="@+id/btn_dialog_cancel"
                style="@style/btn_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_dialog_selector"
                android:padding="10dp"
                android:text="@string/cancel" />

            <include
                android:id="@+id/in_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/layout_line_portrait1" />

            <Button
                android:singleLine="true"
                android:id="@+id/btn_dialog_ok"
                style="@style/btn_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/btn_dialog_selector"
                android:padding="10dp"
                android:text="@string/confirm" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>