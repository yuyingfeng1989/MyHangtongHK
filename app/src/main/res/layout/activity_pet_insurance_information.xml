<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2.0"
                    android:text="@string/order_code" />

                <TextView
                    android:id="@+id/tv_order_code"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>

            <!-- 投保资料 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="10dp"
                    android:text="@string/insurance_information" />
            </LinearLayout>

            <!-- 姓名 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2.0"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/et_user_name"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 电话 -->

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2.0"
                    android:text="@string/phone" />

                <TextView
                    android:id="@+id/et_phone"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 狗狗昵称 -->

            <LinearLayout
                android:id="@+id/ll_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2.0"
                    android:text="@string/edit_name" />

                <TextView
                    android:id="@+id/et_pet_nick_name"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 品种 -->

            <LinearLayout
                android:id="@+id/ll_pet_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2.0"
                    android:text="@string/edit_pet_type" />

                <TextView
                    android:id="@+id/et_pet_type"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 颜色 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2.0"
                    android:text="@string/insurance_pet_colour" />

                <TextView
                    android:id="@+id/et_colour"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 尾巴形状 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2.0"
                    android:text="@string/tail_shape" />

                <TextView
                    android:id="@+id/tv_tail_shape"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 年龄 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2.0"
                    android:text="@string/edit_age" />

                <TextView
                    android:id="@+id/et_age"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <!-- 性别 -->

            <LinearLayout
                android:id="@+id/ll_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2"
                    android:text="@string/edit_sex" />

                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>
   <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />
            <!-- 保险起期 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2"
                    android:text="@string/lnsurance_start" />

                <TextView
                    android:id="@+id/tv_lnsurance_start"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>
            <!-- 保险止期 -->
               <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                layout="@layout/layout_line_landscape" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="2"
                    android:text="@string/lnsurance_end" />

                <TextView
                    android:id="@+id/tv_lnsurance_end"
                    style="@style/edit_no_background2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>