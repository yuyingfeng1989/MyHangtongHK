<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/bg_theme"
        android:orientation="horizontal">

        <!-- <LinearLayout
             android:id="@+id/ll_title_left_menu"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:clickable="true"
             android:gravity="center_vertical"
             android:orientation="horizontal">-->

        <ImageView
            android:id="@+id/iv_back_alarm"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:src="@drawable/btn_previous_selector" />
        <!-- </LinearLayout>-->


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_theme"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/ll_alarm_index"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <!-- <ImageView
                     android:id="@+id/iv_newmsg_alarm"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="right"
                     android:layout_marginRight="30dp"
                     android:layout_marginTop="8dp"
                     android:src="@drawable/icon_new"
                     android:visibility="gone"/>-->


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_alarm"
                            style="@style/text_mid_white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/alarm_msg" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v_alarm"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:visibility="invisible" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ll_sysmsg_index"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <!--<ImageView
                    android:id="@+id/iv_newmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/icon_new" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_system"
                            style="@style/text_mid_white_transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/system_msg" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v_sysmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:visibility="invisible" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_title_right_poit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_right_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/edit"
                android:textColor="@color/text_btn_selected2"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </LinearLayout>

    <!--  以上是标题-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title">

        <LinearLayout
            android:id="@+id/ll_sysmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <WebView
                android:id="@+id/tv_sysmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_data_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_date_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_bg_nor"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/text_b2"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/to1"
                    android:textColor="@color/text_b2"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_date_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_bg_nor"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/text_b2"
                    android:textSize="@dimen/text_16" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_bg_nor"
                    android:dropDownHorizontalOffset="180dp"
                    android:dropDownVerticalOffset="2dp"
                    android:padding="10dp"
                    android:popupBackground="#f0000000"
                    android:requiresFadingEdge="none"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_no_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_data_select"
                android:background="@drawable/list_item_selector_stroke"
                android:clickable="true"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_history"
                        style="@style/text_base_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/alarm_no_read" />

                    <ImageView
                        android:id="@+id/iv_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/tv_history"
                        android:src="@drawable/icon_new"
                        android:visibility="visible" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_alarm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_no_read"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:scrollingCache="false" />

            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white">

                <Button
                    android:id="@+id/btn_select_all"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:text="@string/all_select"
                    android:textColor="@color/text_b2"
                    android:textSize="@dimen/text_17" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:text="@string/delete"
                    android:textColor="@color/bg_theme"
                    android:textSize="@dimen/text_17" />

                <Button
                    android:id="@+id/btn_set_read"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/btn_delete"
                    android:background="@null"
                    android:text="@string/set_read"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_17" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>