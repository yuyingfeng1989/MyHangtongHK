<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/bg_theme" >

        <ImageView
            android:id="@+id/chat_card_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/btn_previous_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/text_title"
            android:text="@string/myself"
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_frame" />

    <!-- 头像 -->

    <RelativeLayout
        android:id="@+id/chat_rl_photo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/list_item_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/chat_card_photo"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/photo_dirct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/pic_next_selector" />

        <com.bluebud.view.CircleImageView
            android:id="@+id/chat_card_photo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/photo_dirct"
            android:src="@drawable/img_defaulthead_628"
            app:border_color="@color/bg_theme"
            app:border_width="1dp" />
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        layout="@layout/layout_line_landscape" />

    <!-- 账号 -->

    <RelativeLayout
        android:id="@+id/chat_rl_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/list_item_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/account"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/chat_card_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        layout="@layout/layout_line_landscape" />

    <!-- 昵称 -->

    <RelativeLayout
        android:id="@+id/chat_rl_nickname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/list_item_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/edit_name"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/nickname_dirct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/pic_next_selector" />

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/chat_card_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:layout_toLeftOf="@id/nickname_dirct" />
    </RelativeLayout>

    <!-- 性别 -->

    <RelativeLayout
        android:id="@+id/chat_rl_sex"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_item_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/edit_sex"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/sex_dirct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/pic_next_selector" />

        <TextView
            android:id="@+id/chat_card_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/sex_dirct"
             />
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        layout="@layout/layout_line_landscape" />

    <!-- 年龄 -->

    <RelativeLayout
        android:id="@+id/chat_rl_age"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/list_item_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/edit_age"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/age_dirct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/pic_next_selector" />

        <TextView
            android:id="@+id/chat_card_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/age_dirct"
             />
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        layout="@layout/layout_line_landscape" />

    <!-- 地区 -->

    <RelativeLayout
        android:id="@+id/chat_rl_region"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/list_item_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/chat_card_region"
            android:textColor="@android:color/black"
            android:id="@+id/text_region"/>

        <ImageView
            android:id="@+id/area_dirct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/pic_next_selector" />

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/chat_card_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:layout_toRightOf="@id/text_region"
            android:layout_toLeftOf="@id/area_dirct"
             />
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        layout="@layout/layout_line_landscape" />

    <!-- 个人说明 -->

    <RelativeLayout
        android:id="@+id/chat_rl_instruction"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/list_item_selector" >

        <TextView
            android:id="@+id/text_instruct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/chat_card_pe"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/instruct_dirct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/pic_next_selector" />
        
         <TextView
             android:paddingLeft="5dp"
             android:layout_toRightOf="@id/text_instruct"
             android:layout_toLeftOf="@id/instruct_dirct"
            android:id="@+id/chat_card_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:gravity="right"
            android:layout_centerVertical="true"
             android:singleLine="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        layout="@layout/layout_line_landscape" />

</LinearLayout>