<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/schedule_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/ico_title_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/class_timetable"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/schedule_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/ico_schedules_setting" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_class_layout1"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/ico_date1">

                <TextView
                    android:id="@+id/mon_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:text="@string/history_Mon"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <GridView
                    android:id="@+id/gv_class1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/mon_text"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4"
                    android:verticalSpacing="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_class_layout2"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/ico_date1">

                <TextView
                    android:id="@+id/tue_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:text="@string/history_Tues"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <GridView
                    android:id="@+id/gv_class2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/tue_text"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4"
                    android:verticalSpacing="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_class_layout3"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/ico_date1">

                <TextView
                    android:id="@+id/wed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:text="@string/history_Wed"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <GridView
                    android:id="@+id/gv_class3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/wed_text"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4"
                    android:verticalSpacing="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_class_layout4"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/ico_date1">

                <TextView
                    android:id="@+id/four_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:text="@string/history_Thur"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <GridView
                    android:id="@+id/gv_class4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/four_text"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4"
                    android:verticalSpacing="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_class_layout5"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/ico_date1">

                <TextView
                    android:id="@+id/fri_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:text="@string/history_Fri"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <GridView
                    android:id="@+id/gv_class5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/fri_text"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4"
                    android:verticalSpacing="8dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>