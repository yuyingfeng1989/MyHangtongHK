<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_gray" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- 第一个时间 -->
            <RelativeLayout
                android:id="@+id/rl_medicremind_clock1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/text_2e"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time1"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/shake_switch_button1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/take_medicine_reminder"
                        android:textColor="@color/text_a7"
                        android:textSize="@dimen/text_13" />

                    <TextView
                        android:id="@+id/tv_week1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="周一周二周三周四周五"
                        android:textColor="@color/text_a7"
                        android:textSize="@dimen/text_13" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/shake_switch_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/cb_switch_bg"
                    android:button="@null"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <!--第二个时间  -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background_gray" />
            <RelativeLayout
                android:id="@+id/rl_medicremind_clock2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/text_2e"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time2"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/shake_switch_button2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/take_medicine_reminder"
                        android:textColor="@color/text_a7"
                        android:textSize="@dimen/text_13" />

                    <TextView
                        android:id="@+id/tv_week2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="周一周二周三周四周五"
                        android:textColor="@color/text_a7"
                        android:textSize="@dimen/text_13" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/shake_switch_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/cb_switch_bg"
                    android:button="@null"
                    android:gravity="center_vertical" />
            </RelativeLayout>


            <!--第三个时间-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background_gray" />
            <RelativeLayout
                android:id="@+id/rl_medicremind_clock3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/text_2e"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time3"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/shake_switch_button3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="@string/take_medicine_reminder"
                        android:textColor="@color/text_a7"
                        android:textSize="@dimen/text_13" />

                    <TextView
                        android:id="@+id/tv_week3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="周一周二周三周四周五"
                        android:textColor="@color/text_a7"
                        android:textSize="@dimen/text_13" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/shake_switch_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/cb_switch_bg"
                    android:button="@null" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
