<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/rc_normal_bg" >

    <com.bluebud.view.CircleImageView
        android:layout_marginTop="10dp"
        android:id="@+id/chat_member_image"
        android:layout_width="@dimen/chat_image_width"
        android:layout_height="@dimen/chat_image_width"
         android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/rc_ic_def_msg_portrait" />

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/chat_text_name"
        android:layout_width="@dimen/chat_image_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/text_6"
        android:text="@string/order_name" />

</LinearLayout>