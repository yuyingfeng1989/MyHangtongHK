<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:scrollbars="none">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_background_height"
            android:background="@color/background_gray" />

        <RelativeLayout
            android:id="@+id/rl_change_portrait"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <com.bluebud.view.CircleImageView
                android:id="@+id/iv_tracker_headicon"
                android:layout_width="@dimen/head_width"
                android:layout_height="@dimen/head_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/pic_person" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_background_height"
            android:background="@color/background_gray" />

        <include
            android:id="@+id/ll_people"
            layout="@layout/layout_tracker_edit_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/ll_car"
            layout="@layout/layout_tracker_edit_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_background_height"
            android:background="@color/background_gray" />

        <LinearLayout
            android:id="@+id/ll_sim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_selector"
            android:orientation="horizontal">

            <TextView
                style="@style/text_lable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1.5"
                android:text="@string/device_sim_no" />

            <TextView
                android:id="@+id/tv_sim_code"
                style="@style/edit_no_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/import_sim_code"
                android:singleLine="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/pic_next_selector" />
        </LinearLayout>
    </LinearLayout>
    <!--</LinearLayout>-->

</ScrollView>