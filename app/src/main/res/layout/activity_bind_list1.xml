<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingRight="50dp"
            android:src="@drawable/btn_previous_selector1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bind_equipment"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="@string/skip"
            android:textColor="#57c7c2"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- <View
         android:id="@+id/cut_line1"
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:visibility="gone"
         android:background="@color/grey_bg" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/select_device_type"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/describe_select"
        android:textColor="@color/text_9"
        android:textSize="@dimen/text_14" />


    <GridView
        android:id="@+id/bind_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none" />

    <ImageView
        android:id="@+id/mall_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/bind_mall_image" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@color/white"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_tips1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="50dp"
            android:text="@string/no_equipment_tip1"
            android:textColor="#dddedd"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_tips1"
            android:paddingBottom="50dp"
            android:text="@string/buy_now"
            android:textColor="#3e6664"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>