<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:minHeight="45dp"
    android:background="@color/obd_212121"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/obd_time_left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:src="@drawable/obd_left_image" />

    <TextView
        android:gravity="center"
        android:id="@+id/obd_time"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:text="2019/03/20"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/obd_time_right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:src="@drawable/obd_right_image" />


</RelativeLayout>